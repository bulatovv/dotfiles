[sound]
command=~/.scripts/volume/volume.sh
align=center
min_width=46
interval=1
signal=5

[battery]
command=sleep 0.5;~/.scripts/battery/battery.sh
interval=repeat
align=center
min_width=44

[layout]
command=sleep 0.2;~/.scripts/keyboard/layout.sh
interval=repeat

[time]
command=date '+%H:%M'
interval=1

[datetime]
command=date '+%d/%m/%Y'
interval=60

